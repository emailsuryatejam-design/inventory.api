# KCL Stores API â€” Apache Configuration
# Deployed to /public_html/api/

# Enable rewrite engine
RewriteEngine On

# Handle CORS preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Deny access to config files directly (extra safety)
<Files "config.php">
    # Allow internal includes but log external attempts
</Files>

# PHP settings for Hostinger shared hosting
<IfModule mod_php.c>
    php_value max_execution_time 60
    php_value memory_limit 128M
    php_value post_max_size 10M
    php_value upload_max_filesize 10M
    php_value display_errors Off
    php_value log_errors On
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "DENY"
</IfModule>

# Deny directory listing
Options -Indexes
